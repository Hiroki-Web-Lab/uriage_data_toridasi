{
  "manifest_version": 3,
  "name": "Uriage PHPSESSID Helper",
  "version": "1.1.0",
  "description": "hakataya.xsrv.jp の PHPSESSID を取得して、売上データ取り込みアプリへ自動入力/自動実行します。",
  "permissions": ["cookies", "tabs", "scripting", "storage"],
  "host_permissions": [
    "https://hakataya.xsrv.jp/*",
    "https://*.up.railway.app/*",
    "https://*.onrender.com/*",
    "https://annual-budget-nybz.vercel.app/*"
  ],
  "action": {
    "default_title": "Uriage Helper",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  }
}


